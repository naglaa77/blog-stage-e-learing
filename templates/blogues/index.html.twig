{% extends 'base.html.twig' %}

{% block title %}blog{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="https://bootswatch.com/5/pulse/bootstrap.min.css">
  <link rel="stylesheet" href="{{asset('css/blog.css')}}">
{% endblock %}
{% block body %}
<style>
    {# .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; } #}
</style>

<section id="topindex" >
<div class="container">


<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Accueil.html">Accueil</a></li>
    <li class="breadcrumb-item active" aria-current="page">Blogues

    </li>
  </ol>
</nav>
</div>

</section>
   


<section id="blogs">
  <h3 class="titre-perso container">
     Blogues
  </h3>
<div class="container">
  <div class="row">
    
      {% for article in articles %}
      <div  class="col-6 col-md-4 ">
        <div id="blog" class="card " style="width: 18rem;">
          <div id="cardbase" >
            <img src="{{ article.image }}" alt="blog image cap" class="card-img-top" style="width:100%">
            <div class="card-body">
                <h3  class="card-title">{{ article.title }}</h3>
              <p class="card-text">{{ article.descriptionArt }}</p>
              {% for article in article.category %}
                    <button class="btn btn-sm m-2" type="submit">{{ article.titleCat }}</button>
              {% endfor %} 
            </div>

            <a class="btn btn-primary" href={{ path('blogues_show', {'slug' : article.slug}) }}>
            {# <div id="blue"></div> #} Plus
            </a>
          </div>
        </div>
      </div>
      {% endfor %}    
   

  </div>
</div>

</section>
{% endblock %}
