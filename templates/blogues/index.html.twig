{% extends 'base.html.twig' %}

{% block title %}Hello BloguesController!{% endblock %}

{% block body %}
<style>
    {# .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; } #}
</style>

<section id="topindex" >
<div class="container">


<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Accueil.html">Accueil</a></li>
    <li class="breadcrumb-item active" aria-current="page">Blogues

    </li>
  </ol>
</nav>
</div>

</section>
   


<section id="blogs">
  <h3 class="titre-perso container">
      Derniers Blogues
  </h3>
  <div id="blog" class="container">
    {% for article in articles %}
        <div id="cardb">
          <a href={{ path('blogues_show', {'slug' : article.slug}) }}>
          <img src="{{ article.image }}" alt="Cours" style="width:100%">
          <h1>{{ article.title }}</h1>
          <p>{{ article.descriptionArt }}</p>
          {% for article in article.category %}
                <button class="btn btn-sm m-2" type="submit">{{ article.titleCat }}</button>
          {% endfor %}            
          <br>
          <div id="blue"></div>
          </a>
        </div>
    {% endfor %}    
  </div>
</section>
{% endblock %}
